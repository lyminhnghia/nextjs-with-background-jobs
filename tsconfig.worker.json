{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "noEmit": false,
    "isolatedModules": false,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "."
  },
  "include": [
    "./src/worker/*.ts",
    "./src/lib/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
